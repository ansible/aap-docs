   resources:
     - '*'
 kms:
   actions:
     - kms:CreateGrant
     - kms:Decrypt
     - kms:DescribeKey
     - kms:GenerateDataKey
   resources:
     - '*'
 rds:
   actions:
     - rds:AddTagsToResource
     - rds:CreateDBInstance
